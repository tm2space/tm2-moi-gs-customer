# YAMCS Configuration
YAMCS_PORT=8090
YAMCS_HOST=0.0.0.0

# Security Configuration - CHANGE THESE VALUES!
ADMIN_PASSWORD=your_secure_admin_password_here
YAMCS_SECRET_KEY=your_secret_key_here

# OBC Configuration
OBC_HOST=localhost
OBC_TM_PORT=10015
OBC_TC_PORT=1234

# Database Configuration (if using external database)
YAMCS_DB_HOST=localhost
YAMCS_DB_PORT=5432
YAMCS_DB_NAME=yamcs
YAMCS_DB_USER=yamcs
YAMCS_DB_PASSWORD=yamcs_password

# Memory Configuration
JAVA_OPTS=-Xmx2g -Xms1g -Djansi.tmpdir=/yamcs/tmp -Djava.io.tmpdir=/yamcs/tmp
MAVEN_OPTS=-Djansi.tmpdir=/yamcs/tmp

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Monitoring Configuration
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Network Configuration
YAMCS_NETWORK_SUBNET=172.30.0.0/16

# Data Persistence Paths
YAMCS_DATA_PATH=./data/yamcs-data
YAMCS_LOGS_PATH=./data/yamcs-logs
YAMCS_CONFIG_PATH=./data/yamcs-config
YAMCS_CACHE_PATH=./data/yamcs-cache

# Resource Limits
MEMORY_LIMIT=2.5G
CPU_LIMIT=2
MEMORY_RESERVATION=1G
CPU_RESERVATION=0.5
